{
  "name": "priya-e-store",
  "type": "module",
  "version": "1.0.0",
  "description": "Ecommerce website like amazon",
  "main": "index.js",
  "scripts": {
    "start": "node server/server.js",
    "start:server": "nodemon server/server.js",
    "start:client": "cd client && npm start",
    "install": "cd client && npm i",
    "build": "cd client && npm run build",
    "lint": "eslint client/src/**/*.jsx  client/src/**/*.js server/**/*.js",
    "lint:fix": "eslint client/src/**/*.jsx --fix client/src/**/*.js --fix server/**/*.js --fix",
    "test:server": "jest --watch",
    "test:client": "cd client && npm run test"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "eslint-plugin-react": "^7.21.2",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "mongoose": "^6.0.13",
    "multer": "^1.4.3",
    "socket.io": "^4.4.0"
  }
}
